{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch MissionPlanner",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch MAVLink Simulator",
            "type": "debugpy",
            "request": "launch",
            "module": "src.simulators.MavlinkServerEmulator",
            "console": "externalTerminal",
            "cwd": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Launch MissionPlanner & Simulator",
            "configurations": [
                "Launch MissionPlanner",
                "Launch MAVLink Simulator"
            ]
        }
    ]
}
